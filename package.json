	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && eslint . --ext .ts --ext .js && git add ."
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
